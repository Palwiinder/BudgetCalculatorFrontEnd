@model BudgetCalculatorFrontEnd.Models.CreateEditCategoryViewModel

@{
    ViewBag.Title = "CreateHouseHold";
}

<div style="padding-left:400px">
    <form method="post" action="@Url.Action("Create","Category")">
        @Html.ValidationSummary(false)
        <input type="hidden" name="id" value="@ViewBag.id" />
        <div class="form-group">
            @Html.LabelFor(p => p.Name, "Name:")
            @Html.TextBoxFor(p => p.Name, new { @class = "form-control", placeholder = "Name" })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Description, "Description:")
            @Html.TextBoxFor(p => p.Description, new { @class = "form-control", placeholder = "Description" })
        </div>
        <div class="">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </form>
</div>