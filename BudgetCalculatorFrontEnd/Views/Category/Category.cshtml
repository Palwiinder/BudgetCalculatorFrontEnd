@model IEnumerable<BudgetCalculatorFrontEnd.Models.ViewModel.CategoryViewModel>
@{
    ViewBag.Title = "Cartegory";
}
<div class="row panel panel-success" style="margin-top:2%;">
    <div class="panel-heading lead">
        <div class="row">
            <div class="col-lg-8 col-md-8"><i class="fa fa-users"></i>Category</div>
            <div class="col-lg-4 col-md-4 text-right">
            </div>
        </div>
    </div>
</div>
@if (!Model.Any())
{
    <p>No Category</p>
}

<div style="padding-right:200px" class="panel-body">
    <div class="row">
        <div class="col-lg-12 col-md-12">
            @foreach (var item in Model)
            {
                <div class="col-lg-9 col-md-9">
                    @if (item.IsOwner)
                    {
                        <ul class="nav nav-tabs">
                            <li><a href="@Url.Action("Edit", "Category", new { id = item.Id })" class="text-success"><i class="fa fa-indent"></i>Edit Category</a></li>
                            <li><a href="@Url.Action("Delete", "Category", new { id = item.Id })" class="text-success"><i class="fa fa-bookmark-o"></i>Delete Category</a></li>
                        </ul>
                    }
                    <div class="tab-content">
                        <div id="Summery" class="tab-pane fade in active">

                            <div class="table-responsive panel">
                                <table class="table">
                                    <tbody>

                                        <tr>
                                            <td class="text-success"><i class="fa fa-user"></i> Name:</td>
                                            <td>@item.Name</td>
                                        </tr>
                                        <tr>
                                            <td class="text-success"><i class="fa fa-list-ol"></i>Description</td>
                                            <td>@item.Description</td>
                                        </tr>
                                        <tr>
                                            <td class="text-success"><i class="fa fa-book"></i>DateCreated</td>
                                            <td>@item.DateCreated</td>
                                        </tr>
                                        <tr>
                                            <td class="text-success"><i class="fa fa-group"></i> DateUpdated</td>
                                            <td>@item.DateUpdated</td>
                                        </tr>
                                        <tr>
                                            <td class="text-success"><i class="fa fa-calendar"></i>Created By</td>
                                            <td>@item.CreatedBy</td>
                                        </tr>

                                        @*<tr>
                                                <td class="text-success"><i class="fa fa-university"></i>HouseHold</td>
                                                <td>
                                                    @item.
                                                </td>
                                            </tr>*@
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    @*<ul class="nav nav-tabs">
                            <li><a href="@Url.Action("Category", "Category" ,new { id = Model.Id })" class="text-success"><i class="fa fa-indent"></i>View Categories</a></li>
                            <li><a href="@Url.Action("BankAccount", "BankAccount" ,new { id = Model.Id })" class="text-success"><i class="fa fa-bookmark-o"></i>View Bank Accounts</a></li>
                        </ul>*@

                </div>
            }
        </div>
    </div>
</div>
