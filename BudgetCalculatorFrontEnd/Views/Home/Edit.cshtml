@model BudgetCalculatorFrontEnd.Models.CreateEditHouseHoldViewModel
@{
    ViewBag.Title = "EditHouseHold";
}

<form method="post" action="@Url.Action("Edit","Home")">
    @Html.ValidationSummary(false)
    <input type="hidden" value="@ViewBag.id" name="id" />
    <div class="form-group">
        @Html.LabelFor(p => p.Name, "Name:")
        @Html.TextBoxFor(p => p.Name, new { @class = "form-control", placeholder = "Name" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Description, "Description:")
        @Html.TextBoxFor(p => p.Description, new { id = "Description", @class = "form-control", placeholder = "Description" })
    </div>
    <div class="">
        <button type="submit" class="btn btn-default">Submit</button>
    </div>
</form>
