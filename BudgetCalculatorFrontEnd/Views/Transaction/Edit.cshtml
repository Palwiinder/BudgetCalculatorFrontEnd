@model BudgetCalculatorFrontEnd.Models.EditTransactionViewModel



<div style="padding-left:400px">
    <form method="post">
        @Html.ValidationSummary(false)
        <input type="hidden" name="id" value="@ViewBag.id" />
        <input type="hidden" name="bankAccountId" value="@ViewBag.bankAccountId" />
        <div class="form-group">
            @Html.LabelFor(p => p.Title, "Title:")
            @Html.TextBoxFor(p => p.Title, new { @class = "form-control", placeholder = "Title" })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Description, "Description:")
            @Html.TextBoxFor(p => p.Description, new { @class = "form-control", placeholder = "Description" })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Amount, "Amount:")
            @Html.TextBoxFor(p => p.Amount, new { @class = "form-control", placeholder = "Amount" })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.TransactionDate, "TransactionDate:")
            @Html.TextBoxFor(p => p.TransactionDate, new { @class = "form-control", placeholder = "Date" })
        </div>
        <div class="form-group">
            @Html.DropDownListFor(p => p.CategoryId, Model.Category)
        </div>
        <div class="">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </form>
</div>